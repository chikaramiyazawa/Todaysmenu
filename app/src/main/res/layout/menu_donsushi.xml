            android:id="@+id/todayRice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今日の丼（寿司）は"/>
        <EditText
            android:id="@+id/DonSushimenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <requestFocus/>


        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="です"/>
    </TableLayout>




</LinearLayout>